/*文本*/
.huishou_text{
  display: none;
  width: 90%;
  position: relative;
  top: 100rpx;
  height: auto;
  color: #aaa;
  margin: 30rpx auto;
}

.text_top{
  text-align: center;
  font-size: 24rpx;
