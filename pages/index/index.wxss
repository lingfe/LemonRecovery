 page{
   background-color: #fff;
 }
.page{
  margin: 0;
  padding: 0;
}

/*背景*/
.huishou_bg{
  width: 100%;
  height: 730rpx;
  background-image:url(https://static.daho.club/static/upload/LemonRecovery/assets/images/bg.png);
  background-size:100% 100%;
  background-repeat: no-repeat;
}

/*表单*/
.huishou_form{
  width: 96%;
  height:600rpx;
  position:relative;
  margin: 0rpx auto;
  background-color: #fff;
  top: 175rpx;
  border-radius: 10px;
}

.form{
  position: relative;
  top: 20rpx;
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #EDEBF4;
  margin: 0px auto;
  font-size: 24rpx;
}

.form_last{
  position: relative;
  top: 40rpx;
  width: 84%;
  height: 90rpx;
  line-height: 90rpx;
  margin: 0px auto;
  margin-top: 50rpx;
  text-align: center;
  font-size: 28rpx;
  background-color: #EDE03A;
  box-shadow:2px 2px 10px #ccc;
  border-radius: 10px;
  color: #fff;
}

.form_last:active{
  background-color: #EACF02;
}

button::after {
  content: " ";
  width: 200%;
  height: 200%;
  position: absolute;
  top: 0;
  left: 0;
  border: 0px solid #fff;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  box-sizing: border-box;
  border-radius: 10px;
}

.title{
  color: #999999;
  float: left;
  font-size: 26rpx;
}

/*文本框默认属性*/
.input-placeholder {
  font-size: 26rpx;
